# EditorConfig: http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
continuation_indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2
max_line_length = 120

[*.{kt, kts}]
# noinspection EditorConfigKeyCorrectness
disabled_rules = import-ordering
